{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "labels": [
    "dependencies"
  ],
  "timezone": "Asia/Jakarta",
  
  "ignoreUnstable": true,

  "packageRules": [
    {
      "description": "Weekly minor & patch updates for Gradle (Grouped)",
      "matchManagers": ["gradle", "gradle-wrapper"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major gradle dependencies",
      "semanticCommitType": "deps",
      "automerge": true,
      "schedule": ["every weekend"]
    },
    {
      "description": "Major updates monthly, first weekend of the month",
      "matchManagers": ["gradle", "gradle-wrapper"],
      "matchUpdateTypes": ["major"],
      "semanticCommitType": "deps",
      "schedule": ["before 5am on the first Saturday of the month"],
      "automerge": false
    },
    {
      "description": "Auto-merge GitHub Actions",
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "semanticCommitType": "ci",
      "automerge": true,
      "schedule": ["every weekend"]
    }
  ]
}
