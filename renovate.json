{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":disableDependencyDashboard"
    ],
    "labels": [
        "dependencies"
    ],
    "schedule": [
        "* * * * 0,6"
    ],
    "timezone": "Asia/Jakarta",
    "packageRules": [
        {
            "matchManagers": [
                "gradle",
                "gradle-wrapper"
            ],
            "groupName": "all dependencies",
            "groupSlug": "all",
            "commitMessagePrefix": "deps:",
            "semanticCommitType": "deps",
            "matchPackageNames": [
                "*"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "autoMerge": true
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github-actions",
            "commitMessagePrefix": "ci:",
            "semanticCommitType": "ci"
        }
    ],
    "gradle": {
        "managerFilePatterns": [
            "/(^|/)build\\.gradle\\.kts$/",
            "/(^|/)settings\\.gradle\\.kts$/",
            "/(^|/)libs\\.versions\\.toml$/",
            "/(^|/)gradle\\.properties$/"
        ]
    }
}